<body>
    <div class="container">
        <div class="header">
            <h1>Focus Upper & Arms</h1>
            <p id="sub-header">Sessione di Ipertrofia • 4 Esercizi</p>
            
            <div class="progress-container">
                <div class="progress-label">
                    <span>Progresso</span>
                    <span id="progress-text">0%</span>
                </div>
                <div class="progress-bar-bg">
                    <div id="progress-bar" class="progress-bar-fill"></div>
                </div>
            </div>
        </div>

        <div class="workout-card">
            <div class="table-header">
                <div>Esercizio</div>
                <div style="text-align: center;">Peso</div>
                <div style="text-align: right;">Serie</div>
            </div>
            <div id="exercise-list">
                <!-- Caricato da JS -->
            </div>
        </div>

        <div class="footer">
            <button class="reset-btn" onclick="resetWorkout()">Azzera Sessione</button>
            <button class="finish-btn" onclick="window.print()">Salva PDF</button>
        </div>
    </div>

    <script>
        const exercises = [
            { id: 1, name: "Curl Panca 45", variant: "Eccentrica Martello", sets: 4, weight: "Auto" },
            { id: 2, name: "Curl Isolato", variant: "Focus Picco", sets: 4, weight: "14+3x12k" },
            { id: 3, name: "Lat con cinghia", variant: "Dorsali", sets: 4, weight: "77+ kg" },
            { id: 4, name: "Tirate Orizz.", variant: "Rowing", sets: 3, weight: "61 kg" }
        ];

        // Carica stato salvato
        let state = JSON.parse(localStorage.getItem('workout_v2')) || {};

        function render() {
            const list = document.getElementById('exercise-list');
            list.innerHTML = '';
            
            let totalSets = 0;
            let doneSets = 0;

            exercises.forEach(ex => {
                totalSets += ex.sets;
                const row = document.createElement('div');
                row.className = 'exercise-row';
                
                let buttons = '';
                for(let i=0; i<ex.sets; i++) {
                    const active = state[ex.id] && state[ex.id].includes(i);
                    if(active) doneSets++;
                    buttons += `
                        <button class="set-btn ${active ? 'active' : ''}" onclick="toggle(${ex.id}, ${i})">
                            ${active ? '✓' : i+1}
                        </button>
                    `;
                }

                row.innerHTML = `
                    <div class="ex-info">
                        <span class="name">${ex.name}</span>
                        <span class="variant">${ex.variant}</span>
                    </div>
                    <div class="ex-weight">
                        <span class="weight-tag">${ex.weight}</span>
                    </div>
                    <div class="ex-sets">${buttons}</div>
                `;
                list.appendChild(row);
            });

            const percent = Math.round((doneSets / totalSets) * 100);
            document.getElementById('progress-bar').style.width = percent + '%';
            document.getElementById('progress-text').innerText = percent + '%';
        }

        function toggle(id, index) {
            if(!state[id]) state[id] = [];
            const i = state[id].indexOf(index);
            if(i > -1) state[id].splice(i, 1);
            else state[id].push(index);
            
            localStorage.setItem('workout_v2', JSON.stringify(state));
            render();
        }

        function resetWorkout() {
            if(confirm("Vuoi azzerare la scheda?")) {
                state = {};
                localStorage.removeItem('workout_v2');
                render();
            }
        }

        render();
    </script>
</body>
